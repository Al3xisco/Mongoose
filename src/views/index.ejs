<!DOCTYPE html>
<html>
	<head>
		<title> MongoDB</title>

		<!-- Bootstrap -->
		<link rel="stylesheet" href="https://bootswatch.com/4/sketchy/bootstrap.min.css"  crossorigin="anonymous">

	</head>
	<body>
		<nav class="navbar navbar-dark bg-dark mb-4">
			<a href="/"  class="navbar-brand">Crud MongoDB</a>
		</nav>
	<div class="container">
	  <div class="row">
	    <!--FORM-->
	    <div class="col-md-5">
	      <div class="card">
	        <div class="card-body">
	          <form action="/add" method="post">
	            <div class="form-group">
											<label for="">Nombres</label>
                      <input type="text" name="nombres" value="" class="form-control">
                      <label for="">Apellidos</label>
                      <input type="text" name="apellidos" value="" class="form-control">
                      <label for="">Edad</label>
                      <input type="number" name="edad" value="" class="form-control">
											<br>
	            				<input class="btn btn-info btn-block " type="submit" value="Agregar"></button>
	          </form>
	        </div>
	      </div>
	    </div>
     <br>
	    <!-- LIST -->
	    <div class="col-md-7">
	      <table class="table table-bordered table-hover">
	        <thead>
	          <tr>
							<th>ID</th>
	            <th>Nombre</th>
	            <th>Apellidos</th>
	            <th>Edad</th>
							<th>Actualizar</th>
							<th>Borrar</th>
	          </tr>
	        </thead>
	        <tbody>
	  			<% for(var i=0; i < mod.length; i++) { %>
	  				<tr>
  						<td><%= i + 1 %></td>
  						<td><%= mod[i].nombres %></td>
  						<td><%= mod[i].apellidos %></td>
							<td><%= mod[i].edad %></td>
  						<td>
  							<a href="/editar/<%= mod[i]._id %>" class="btn btn-block btn-outline-success">Actualizar</a>
  						</td>
							<td>
								<a href="/delete/<%= mod[i].nombres %>" class="btn  btn-block btn-outline-warning">Borrar</a>
							</td>
	  				</tr>
	  				<% } %>

	        </tbody>
	      </table>

	    </div>
	  </div>

</div>

</body>
</html>
